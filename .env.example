# Network Configuration
# Change this IP to your machine's IP address for network access
# For local development: HOST=localhost
# For network access: HOST=192.168.1.100 (replace with your actual IP)
HOST=localhost
BACKEND_PORT=5185
FRONTEND_PORT=5180

# Environment
NODE_ENV=development

# CORS Configuration
# For development: CORS_ORIGIN=*
# For production: CORS_ORIGIN=http://192.168.1.100:5180 (replace with your frontend URL)
CORS_ORIGIN=*

# Frontend Environment Variables (VITE_ prefix required)
# These must match the HOST above for proper network access
VITE_HOST=localhost
VITE_BACKEND_PORT=5185
VITE_FRONTEND_PORT=5180

# Help Assistant Configuration
HELP_ASSISTANT_ENABLED=true
HELP_ASSISTANT_PROVIDER=mock
HELP_ASSISTANT_LOG_LEVEL=info

# LLM Provider Configuration
# Get your API keys from:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
# Google AI Studio: https://makersuite.google.com/app/apikey
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
HELP_ASSISTANT_MODEL=gpt-3.5-turbo
HELP_ASSISTANT_MAX_TOKENS=300
HELP_ASSISTANT_TEMPERATURE=0.7
HELP_ASSISTANT_TIMEOUT=5000

# Rate Limiting
HELP_RATE_LIMIT_PER_MINUTE=5
HELP_RATE_LIMIT_PER_HOUR=50
HELP_RATE_LIMIT_PER_DAY=200

# Caching
HELP_CACHE_ENABLED=true
HELP_CACHE_TTL=3600
HELP_CACHE_MAX_SIZE=1000

# Monitoring
HELP_METRICS_ENABLED=true